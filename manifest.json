{
    "manifest_version": 2,
    "name": "Twitter Enhancements",
    "version": "1.0",
    "description": "Enhancements for Twitter",
    "icons": {
        "48": "icons/icon.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
    ],
    "browser_action": {
        "default_icon": "icons/icon.png",
        "default_title": "Highlight Elements"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "options_page": "options.html"
}